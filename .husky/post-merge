#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ”„ Running post-merge tasks..."

# Check if package.json or package-lock.json changed
changed_files="$(git diff-tree -r --name-only --no-commit-id ORIG_HEAD HEAD)"

check_run() {
  echo "$changed_files" | grep --quiet "$1" && eval "$2"
}

# Update dependencies if package files changed
check_run "package.json\|package-lock.json" "echo 'ğŸ“¦ Dependencies updated, running npm install...' && npm install"

# Update Python dependencies if requirements.txt changed
check_run "requirements.txt" "echo 'ğŸ Python dependencies updated, running pip install...' && pip install -r requirements.txt"

echo "âœ… Post-merge tasks completed!"
