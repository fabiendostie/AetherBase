#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run linter
echo "ğŸ“ Linting code..."
npm run lint || {
  echo "âŒ Linting failed. Please fix errors before committing."
  exit 1
}

# Run formatter
echo "âœ¨ Checking code format..."
npm run format:check || {
  echo "âŒ Code formatting issues detected. Run 'npm run format' to fix."
  exit 1
}

# Run type checking (if TypeScript)
if [ -f "tsconfig.json" ]; then
  echo "ğŸ”§ Type checking..."
  npm run type-check || {
    echo "âŒ Type checking failed. Please fix type errors."
    exit 1
  }
fi

echo "âœ… Pre-commit checks passed!"
