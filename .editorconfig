# EditorConfig helps maintain consistent coding styles
# for multiple developers working on the same project
# across various editors and IDEs
# editorconfig.org

root = true

# Universal settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Code files - 2 space indentation
[*.{js,jsx,ts,tsx,json,css,scss,html,vue}]
indent_style = space
indent_size = 2

# Python - 4 space indentation (PEP 8)
[*.py]
indent_style = space
indent_size = 4

# Markdown - preserve trailing whitespace (for line breaks)
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# YAML - 2 space indentation
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Go - tabs by convention
[*.go]
indent_style = tab
indent_size = 4

# Rust - 4 space indentation
[*.rs]
indent_style = space
indent_size = 4

# C/C++ - 4 space indentation
[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 4

# Java - 4 space indentation
[*.java]
indent_style = space
indent_size = 4

# Configuration files
[*.{toml,ini}]
indent_style = space
indent_size = 2

# XML
[*.xml]
indent_style = space
indent_size = 2
